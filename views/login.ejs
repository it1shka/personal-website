<%- include('_header.ejs') %>

<div class="container-lg">
  <div class="row">
  <div class="col-sm-4">
    <h2 class="mt-4">Вход</h2>
    <form action="/user/login" method="post">
      <div class="form-group">
        <label for="email">Адрес эл. почты</label>
        <input type="email" name="email" class="form-control" id="email" value="<%= locals.email %>" required>
      </div>
      <div class="form-group">
        <label for="password">Пароль</label>
        <input type="password" name="password" class="form-control" id="password" value="<%= locals.password%>" required>
      </div>
      <button type="submit" class="btn btn-success mt-2">Войти</button>
    </form>
  </div>
  </div>
</div>

<%- include('_footer.ejs') %>