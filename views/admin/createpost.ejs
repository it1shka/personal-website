<%- include('../_header.ejs') %>

<div class="container-lg mt-4">
  <h2>Создать пост</h2>
  <form action="/admin/create-post" method="post" style="max-width: 960px;">
    <div class="form-group">
      <label for="title">Заголовок</label>
      <input type="text" name="title" id="title" class="form-control" value="<%= post.title %>" required>
    </div>

    <div class="form-group">
      <label for="desc">Краткое описание</label>
      <textarea name="desc" id="desc" class="form-control" value="<%= post.desc %>"></textarea>
    </div>

    <div class="form-group">
      <label for="markdown">Разметка</label>
      <textarea name="markdown" id="markdown" class="form-control" value="<%= post.markdown %>" required></textarea>
    </div>

    <button type="submit" class="btn btn-success mt-2">Запостить!</button>
    <a href="/admin" class="btn btn-outline-secondary mt-2">Сбросить</a>
  </form>
</div>

<%- include('../_footer.ejs') %>